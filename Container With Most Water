class Solution {
    public int maxArea(int[] height) {
        int n = height.length - 1;
        int left = 0;
        int right = n;
        int maxArea = 0;

        if(n == 0)
            return 0;

        while(left < right){
            int area = Math.min(height[left], height[right])*(right - left);
            
            maxArea = Math.max(area, maxArea);

            if(height[left] < height[right]){
                left++;
            }
            else{
                right--;
            }
        }
        return maxArea;
    }
}
