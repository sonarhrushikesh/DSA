class Solution {
    public int maxSubArray(int[] nums) {
        int current_sum = 0;
        int maxsum = Integer.MIN_VALUE;

        for(int i = 0; i<nums.length; i++){
            current_sum = current_sum + nums[i];
            maxsum = Math.max(current_sum, maxsum);

            if(current_sum < 0){
                current_sum = 0;
            }
        }

        return maxsum;
    }
}
